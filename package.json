{
  "name": "@bcgov/myhealth-symptom-checker",
  "private": true,
  "scripts": {
    "format:staged": "yarn pretty-quick --staged",
    "format:check": "yarn prettier --check .",
    "format:write": "yarn prettier --write .",
    "lint": "echo 'Linting all packages' && yarn workspace api lint && yarn workspace web lint",
    "check": "run-p 'lint' 'format:check'",
    "prepare": "husky install",
    "precommit": "yarn format:staged",
    "start:api": "yarn workspace api start",
    "start:web": "yarn workspace web start",
    "watch:api": "yarn workspace api watch",
    "watch:web": "yarn workspace web watch",
    "test:api": "yarn workspace api test",
    "test:web": "yarn workspace web test",
    "test:e2e:api": "yarn workspace api test:e2e",
    "test:e2e:web": "yarn workspace web test:e2e",
    "start": "concurrently yarn:start:*",
    "watch": "concurrently yarn:watch:*",
    "test": "concurrently yarn:test:*",
    "test:e2e": "concurrently yarn:test:e2e:*"
  },
  "workspaces": [
    "apps/api",
    "apps/web"
  ],
  "devDependencies": {
    "concurrently": "7.0.0",
    "@tsconfig/node16": "1.0.1",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.0.0",
    "eslint-config-prettier": "8.3.0",
    "husky": "7.0.4",
    "prettier": "2.4.1",
    "pretty-quick": "3.1.2"
  }
}
